IDENTIFICATION DIVISION.
PROGRAM-ID. ADD-NUMBERS.

ENVIRONMENT DIVISION.
INPUT-OUTPUT SECTION.
FILE-CONTROL.
   SELECT INPUT-FILE 
      ASSIGN TO "input.txt"
      ORGANIZATION IS LINE SEQUENTIAL.
   SELECT OUTPUT-FILE 
      ASSIGN TO "output.txt"
      ORGANIZATION IS LINE SEQUENTIAL.

DATA DIVISION.
FILE SECTION.
   FD  INPUT-FILE.
   01  INPUT-RECORD.
      05  INPUT-NUMBER-1 PIC 9(4).
      05  INPUT-NUMBER-2 PIC 9(4).
   FD  OUTPUT-FILE.
   01  OUTPUT-RECORD.
      05  OUTPUT-NUMBER PIC 9(4).

PROCEDURE DIVISION.
   OPEN INPUT INPUT-FILE
   OPEN OUTPUT OUTPUT-FILE 
   READ INPUT-FILE
      AT END SET END-OF-FILE TO TRUE
      NOT AT END ADD INPUT-NUMBER-1 TO INPUT-NUMBER-2 GIVING OUTPUT-NUMBER
   END-READ
   PERFORM UNTIL END-OF-FILE = "TRUE"
      WRITE OUTPUT-RECORD
      READ INPUT-FILE
         AT END SET END-OF-FILE TO TRUE
         NOT AT END ADD INPUT-NUMBER-1 TO INPUT-NUMBER-2 GIVING OUTPUT-NUMBER
      END-READ
   END-PERFORM
   CLOSE INPUT-FILE, OUTPUT-FILE
   STOP RUN.
